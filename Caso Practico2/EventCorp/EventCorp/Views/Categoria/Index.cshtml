@model IEnumerable<EventCorp.Models.Categoria>

    <h2>Listado de Categorías</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-success">Crear Nueva Categoría</a>
